<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />

        <variable
            name="searchInfo"
            type="com.lickling.mymusic.viewmodel.MusicViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:background="@color/white"
        android:orientation="vertical">

        <!--    1 -->


        <!--    2-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageview_back"
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/pq_back" />
            </LinearLayout>

            <!--        <ImageView-->
            <!--            android:layout_width="260dp"-->
            <!--            android:layout_height="35dp"-->
            <!--            android:background="@drawable/pq_input"-->
            <!--            android:layout_marginLeft="20dp"/>-->
            <androidx.appcompat.widget.SearchView
                android:id="@+id/search_edit"
                android:layout_width="260dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/pq_input"
                app:iconifiedByDefault="false"
                app:queryHint="请输入搜索内容" />

            <ImageView
                android:id="@+id/search_btn"
                android:layout_width="35dp"
                android:layout_height="17dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/pq_seektext" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/loaded_head"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="50dp">

                <Button
                    android:id="@+id/loaded_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:background="@android:color/transparent"
                    android:text="单曲"
                    android:textStyle="bold"
                    android:textSize="20sp">

                </Button>

                <View
                    android:id="@+id/select_tag1"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_below="@id/loaded_btn"
                    android:layout_marginTop="-10dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/load_red_point"
                    android:clipToOutline="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/loading_head"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/loading_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="歌单"
                    android:textSize="20sp">

                </Button>

                <View
                    android:id="@+id/select_tag2"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_below="@id/loading_btn"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="-10dp"
                    android:background="@drawable/load_red_point"
                    android:clipToOutline="true"
                    android:visibility="invisible" />
            </RelativeLayout>
        </LinearLayout>

        <!--    3 -->
        <RelativeLayout
            android:id="@+id/load_head3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/play_btn"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/load_red_play">

            </Button>

            <Button
                android:id="@+id/multi_choice_btn"
                android:layout_width="36dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="20dp"
                android:background="@android:color/transparent"
                android:text="多选"
                android:textSize="15sp"
                android:textStyle="bold"></Button>

            <CheckBox
                android:id="@+id/all_choice_btn"
                android:layout_width="36dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:text="全选"
                android:visibility="gone">

            </CheckBox>

            <TextView
                android:id="@+id/checked_item_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/cancel_choice_btn"
                android:layout_toRightOf="@+id/all_choice_btn"
                android:gravity="center"
                android:text="已选0首"
                android:visibility="gone"></TextView>

            <Button
                android:id="@+id/cancel_choice_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="20dp"
                android:background="@android:color/transparent"
                android:text="取消"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="gone"></Button>

        </RelativeLayout>


        <!--    4 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                tools:listitem="@layout/desktop_song_list"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/desktop_item"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:background="@drawable/pq_cover">

                    </ImageView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="歌曲名"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="歌手" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageView_play"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:background="@drawable/pq_play" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageView_next"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:background="@drawable/pq_next" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageView_list"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:background="@drawable/pq_list" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</layout>