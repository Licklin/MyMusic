<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/load_mul_popup_background"
        android:orientation="horizontal"
        android:padding="15dp"
        android:weightSum="3">

        <Button
            android:id="@+id/next_play_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="0dp"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/load_mul_next_play"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="下一首播放"
            android:textSize="14sp"></Button>

        <Button
            android:id="@+id/add_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="0dp"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/load_mul_add"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="添加"
            android:textSize="14sp"></Button>

        <Button
            android:id="@+id/delete_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="0dp"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/load_mul_delete"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="删除"
            android:textSize="14sp"></Button>

    </LinearLayout>
</LinearLayout>