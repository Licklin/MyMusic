<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyMusic" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/wy_red</item>
        <item name="colorPrimaryVariant">@color/wy_red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/qq_green</item>
        <item name="colorSecondaryVariant">@color/qq_green</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="actionMenuTextAppearance">@style/MyActionMenuTextAppearance</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionMenuTextAppearance">@style/MyActionMenuTextAppearance</item>
    </style>

    <style name="MyActionMenuTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!---->
    <style name="NoTitle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="colorControlHighlight">@color/color30Black</item>
        <!--将状态栏颜色设置为透明色-->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!--将导航栏颜色设置为透明色-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!--透明Activity 样式设置-->
    <style name="ActivityTransparent" parent="NoTitle">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/activity_animation_up_down</item>
        <!--背景设置为透明色-->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--控制透明Activity进出动画-->
    <style name="activity_animation_up_down" parent="android:Animation">
        <!-- 开始动画-->
        <item name="android:windowEnterAnimation">@anim/push_in</item>
        <!-- 退出动画-->
        <item name="android:windowExitAnimation">@anim/push_out</item>
    </style>
    <!--控制透明Activity退出无动画-->
    <style name="noAnimation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>

    </style>
    <!---->

</resources>